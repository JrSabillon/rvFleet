@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @using (Html.BeginForm("CreateHash", "Home"))
    {
        <h2>Crear hash</h2>
        <input type="text" name="data" class="form-control form-control-sm" />
        <hr />
        <input type="submit" value="Crear" class="btn btn-success" />
    }

    @if (!string.IsNullOrEmpty(ViewBag.Hash))
    {
        <br />
        <p>
            Hash generado: @ViewBag.Hash
        </p>
    }
</div>