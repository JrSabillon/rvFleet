<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>

    @Html.Action("SideBar", "Nav")
    <div class="my-container" id="div-content">
        @Html.Partial("_NavBar")
        <div class="body-content pt-4" id="div-content">
            @RenderBody()
            <footer>
                @*<hr />
                    <p>&copy; @DateTime.Now.Year - Recarga Veloz</p>*@
            </footer>
        </div>
    </div>

    <div class="modal" id="modal-loading" tabindex="-1" role="dialog" aria-labelledby="modal-loading" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="w-100 text-center">
                <div class="spinner-border text-white" style="width: 3em; height: 3em" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <br />
                <label class="text-white">Cargando...</label>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/Scripts/dist/index.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
