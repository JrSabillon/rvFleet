
@{
    ViewBag.Title = "Historic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-6">
        <h2>Facturas históricas</h2>
    </div>
    <div class="col-12 col-md-6 form-group">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent shadow">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")">Inicio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Facturas históricas</li>
            </ol>
        </nav>
    </div>
</div>

<hr />

<div class="row form-group">
    <div class="col-12 col-md-6 col-lg-6">
        <div class="input-group mb-3">
            <input type="text" class="form-control col-12" placeholder="Buscar..." name="searchString" value="@ViewBag.searchString" />
            <div class="input-group-append">
                <button class="btn btn-outline-info">
                    Buscar <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 offset-lg-2 col-lg-4">
        @using (Html.BeginForm("ReadExcel", "Orders", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="excelFile" id="input-excelFile" class="form-control-file" />
            <button class="btn btn-outline-success float-right">
                <i class="fa fa-paperclip"></i>
                Adjuntar facturas
            </button>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Fecha</th>
                <th>Facturado</th>
                <th>Proveedor</th>
                <th>Detalle</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>