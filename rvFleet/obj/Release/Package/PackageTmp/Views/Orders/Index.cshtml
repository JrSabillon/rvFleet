@model PagedList.IPagedList<rvFleet.Models.facturas>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Ordenes/Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-12 col-md-6">
        <h2>Ordenes/Facturas</h2>
    </div>
    <div class="col-12 col-md-6 form-group">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent shadow">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")">Inicio</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Facturas</li>
            </ol>
        </nav>
    </div>
</div>

<hr />

@using (Html.BeginForm("Index", "Orders", FormMethod.Get, new { id = "order-form" }))
{
    <div class="row form-group">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="input-group mb-3">
                <input type="text" class="form-control col-12" placeholder="Buscar proveedor/detalle..." name="searchString" value="@ViewBag.searchString">
                <div class="input-group-append">
                    <button class="btn btn-outline-info">Buscar <i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 offset-lg-2 col-lg-4">
            <a href="@Url.Action("New", "Orders")" class="btn btn-outline-success float-right" role="button">
                <i class="fa fa-plus"></i>
                Nuevo
            </a>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            @Html.DropDownList("Type", null, new { @class = "form-control", onchange = "$('#order-form').submit()" })
        </div>
    </div>
}

<br />

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>#</th>
                <th>Fecha</th>
                <th>Facturado</th>
                <th>Proveedor</th>
                <th>Detalle</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {

                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FacCodigoOrden</td>
                        <td>@item.FacFechaOrden.Value.ToString("yyyy-MM-dd")</td>
                        @if (string.IsNullOrEmpty(item.FacNumeroFactura))
                        {
                            <td class="text-center">
                                <i class="fa fa-times text-danger"></i>
                            </td>
                        }
                        else
                        {
                            <td class="text-center">
                                <i class="fa fa-check text-success"></i>
                            </td>
                        }
                        <td>@item.NombreProveedor</td>
                        <td>@item.Detalles</td>
                        <td>@item.FacValorFactura.ToString("N2")</td>
                        <td class="text-center" style="white-space: nowrap;">
                            <a href="@Url.Action("Edit", "Orders", new { item.FacCodigoOrden })" class="btn btn-warning btn-sm">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="@Url.Action("Details", "Orders", new { item.FacCodigoOrden })" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">
                        <label class="h6">No hay registros por mostrar.</label>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />

Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.searchString, type = ViewBag.SelectedType }))