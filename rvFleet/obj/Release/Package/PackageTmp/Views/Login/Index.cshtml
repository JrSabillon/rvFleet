@model rvFleet.POCO.LoginModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/login.css" />
</head>
<body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="card fat">
                        <div class="card-body">
                            <div class="row">
                                <h4 class="card-title col">Iniciar sesión</h4>
                                <div class="col text-right">
                                    <img src="~/Content/images/logos/rv.jpg" width="90" />
                                </div>
                            </div>
                            <hr />
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.LabelFor(x => x.IdUsuario)
                                    @Html.TextBoxFor(x => x.IdUsuario, htmlAttributes: new { @class = "form-control col-12", required = "required", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(x => x.IdUsuario, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="password">
                                        Contraseña
                                        <a href="@Url.Action("Recovery", "Login")" class="float-right d-none">
                                            ¿Olvidaste tu contraseña?
                                        </a>
                                    </label>
                                    <input id="password" type="password" class="form-control col-12" name="Contrasena" required data-eye>
                                    @Html.ValidationMessageFor(x => x.Contrasena, "", new { @class = "text-danger" })
                                </div>

                                if (!string.IsNullOrEmpty(ViewBag.Message))
                                { 
                                    <div class="alert alert-danger text-center">
                                        <label>@ViewBag.Message</label>
                                    </div>
                                }
                                <div class="form-group m-0">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Ingresar
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="footer">
                        &copy; Recarga veloz &mdash; @DateTime.Now.Year
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Login.js"></script>
</body>
</html>
