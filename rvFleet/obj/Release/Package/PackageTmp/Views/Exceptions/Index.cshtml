
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <nav class="navbar navbar-expand navbar-light bg-light fixed-top shadow">
        <div class="navbar-nav mr-auto">
            <div class="navbar-brand">
                <img src="~/Content/images/logos/rv.jpg" class="mt-1" style="max-height: 35px" />
            </div>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Acciones
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="@Url.Action("Logout", "Nav")" id="navbarDropdown">
                        Salir
                        <i class="fa fa-sign-out"></i>
                    </a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="container">
        <hgroup>
            <h1>Error.</h1>
            <h2>Error al procesar la solicitud.</h2>
        </hgroup>
        <hr />

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <label class="font-weight-bold">Posibles causas: </label>
            <p>@ViewBag.Message</p>
        }
    </div>
</body>
</html>
