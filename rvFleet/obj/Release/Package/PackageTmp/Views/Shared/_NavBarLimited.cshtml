@using rvFleet.ViewModels
@{
    var user = BaseViewModel.GetUserData();
    var image = new EnterpriseViewModel().GetEmpresa(user.IdEmpresa).ImagenEmpresa;
}

<nav class="navbar navbar-expand navbar-light bg-light fixed-top shadow-sm">
    <div class="navbar-nav mr-auto">
        <a class="navbar-brand" href="#">
            <img src="@Url.Content(image)" class="mt-1" style="max-height: 35px" />
        </a>
    </div>
    <ul class="navbar-nav">
        <li class="nav-item dropdown d-none d-sm-block">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user"></i>
                @user.IdUsuario
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="@Url.Action("Logout", "Nav")" id="navbarDropdown">
                    Salir
                    <i class="fa fa-sign-out"></i>
                </a>
            </div>
        </li>
    </ul>
</nav>
